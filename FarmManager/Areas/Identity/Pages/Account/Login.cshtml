@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

@* <h1>@ViewData["Title"]</h1> *@
<main role="main" class="container pb-3">
    <form id="account" method="post">
        <h1>Login</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="input-box mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Usuário" type="email" required />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="input-box mb-3">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Senha" type="password" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="checkbox remember-forgot mb-3">
            <label asp-for="Input.RememberMe">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
            <a id="forgot-password" asp-page="./ForgotPassword">Esqueci a senha</a>
        </div>
        <button id="login-submit" type="submit" class="login w-100 btn btn-lg btn-primary">Login</button>
        <div class="register-link">
            <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Não tem uma conta? Cadastre-se</a></p>
        </div>
    </form>

</main>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
